				<script src="/axios/dist/axios.min.js"></script>

				<script>

					paypals.minicarts
						.render();

					const items = paypals.minicarts.cart.items()
					const parent = $(".checkout")

					console.log(items)

					const totalValue = paypals.minicarts.cart.total()

					// render content payment page
					if (items) {
						console.log(items.length)
						parent.html(`
						<div class="payment">
							<div class="total-value"> total shoud be pay: <span> ${totalValue} Egy </span> </div>
							<div class="parent">

							<div class="content">
								<div id="dropin-container"></div>
								<button class="btn btn-primary" id="submit-button"> Pay </div>
							</div>
						</div>
						</div>
					`)
					$(".total-value span").html()
					} else {
						console.log("not items")
						parent.html(`
								<div class="alert alert-danger text-center"> there are not items in your card </div>
							`)
					}

					var submitButton = document.querySelector('#submit-button');
					let token = $(".gettoken").val()
					console.log(token, "get my token")

					braintree.dropin.create({
						authorization: token,
						selector: '#dropin-container'
					}, function (err, dropinInstance) {
						if (err) {
							// Handle any errors that might've occurred when creating Drop-in
							console.error(err);
							return;
						}
						console.log(dropinInstance, 'dropinInstanace')
						submitButton.addEventListener('click', function () {
							dropinInstance.requestPaymentMethod(function (err, payload) {
								console.log(payload, 'payment')
								if (err) {
									// Handle errors in requesting payment method
									console.log(err)
								}
								const data = {
									paymentMethodNonce: payload.nonce,
									amount: totalValue
								}
								axios.post("/api/braintree/process-payment", data).then(result => {
									console.log(result)
								}).catch(err => {
									console.log(err)
								})
							});
						});
					});
				</script>



